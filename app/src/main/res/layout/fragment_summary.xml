<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/firstpart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='"The core of '
        android:textSize="37sp"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="10dp"/>


    <TextView
        android:id="@+id/bpart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='beauty'
        android:textSize="39sp"
        android:layout_centerVertical="true"
        android:fontFamily="monospace"
        android:layout_toEndOf="@+id/firstpart" />

    <TextView
        android:id="@+id/secondPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstpart"
        android:text='is '
        android:textSize="37sp"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="120dp"/>

    <TextView
        android:id="@id/sPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/secondPart"
        android:fontFamily="sans-serif-thin"
        android:text='simplicity."'
        android:textSize="35sp"
        android:layout_below="@+id/bpart"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/secondPart"
        android:fontFamily="sans-serif"
        android:text='by: Paulo Coehlo'
        android:textSize="17sp"
        android:layout_below="@+id/sPart"
        android:textStyle="italic"/>

</RelativeLayout>